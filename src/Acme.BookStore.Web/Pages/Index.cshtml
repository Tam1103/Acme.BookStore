@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Acme.BookStore.Localization
@using Volo.Abp.Users
@inject IHtmlLocalizer<BookStoreResource> L
@inject ICurrentUser CurrentUser
@model Acme.BookStore.Web.Pages.Slides.IndexModel

@section styles {
    <abp-style-bundle>
        <abp-style src="/Pages/Index.css" />
    </abp-style-bundle>
}
@section scripts {
    <abp-script-bundle>
        <abp-script src="/Pages/Index.js" />
    </abp-script-bundle>
    @*<script src="https://cdnjs.cloudflare.com/ajax/libs/Snowstorm/20131208/snowstorm-min.js" integrity="sha512-rMkLONrw50boYG/6Ku0E8VstfWMRn5D0dX3QZS26Mg0rspYq4EHxYOULuPbv9Be2HBbrrmN8dpPgYUeJ4bINCA==" crossorigin="anonymous"></script>*@

    <script type="text/javascript">
        (function () {
            var link = document.querySelector("link[rel*='icon']") || document.createElement('link');
            link.type = 'image/x-icon';
            link.rel = 'shortcut icon';
            link.href = 'img/CV.jpg';
            document.getElementsByTagName('head')[0].appendChild(link);
        })();
    </script>
}
<div class="container">
    <div class="p-5 text-center">
        <div class="badge baml>dge-success h5 rounded mb-4 " role="alert">
            <h5 class="m-1"> <i class="fas fa-rocket"></i>  @L["Welcome to the BookStore"]</h5>
        </div>
        @if (CurrentUser == null)
        {
            <div>
                <a abp-button="Primary" href="~/Account/Login"><i class="fa fa-sign-in"></i> @L["Login"]</a>
            </div>
        }
    </div>

    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img height="450" class="d-block w-100" src="~/slide/thought-catalog-o0Qqw21-0NI-unsplash.jpg"
                     alt="First slide">
            </div>
            @foreach (var item in Model.Slides)
            {
        <div class="carousel-item">
            <img height="550" class="d-block w-100" src="~/slide/@item.Name"
                 alt="item slide">
        </div>
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

</div>
<abp-card-body>
    <abp-table striped-rows="true" id="AuthorsTable"></abp-table>
</abp-card-body>